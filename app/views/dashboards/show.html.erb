<div class="container show-container">
  <div class="row d-flex">
    <div class="col-sm-12 col-md-8">
      <h1>User Dashboard</h1>

      <h5><strong>Welcome back! </strong><span><%= current_user.first_name %></span> <span><%= current_user.last_name %></span></h5>
      <p>Email: <%= current_user.email %></p>
      <p>Phone Number: <%= current_user.phone_number%></p>
      <%= link_to 'Explore All Rockets ', rockets_path, class:'btn btn-primary mt-auto'%><br><br>

      <table class="table table-striped"><strong>Orders</strong>
        <tr>
          <th>Order #</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Status</th>
          <th>Withdraw</th>
        <% @user.orders.each do |order|%>
          <tr>
            <td><%= order.id%></td>
            <td><%= order.start_date %></td>
            <td><%= order.end_date %></td>
            <td><%= order.status %></td>
            <td><%= link_to 'View', order_path(order)%></td>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="col-sm-12 col-md-4 d-flex flex-column">
      <div class="rocket-dash-container d-flex ">
        <h3>Rockets</h3>
      </div>

      <table class="table table-striped">
        <tr>
          <th>Rocket name</th>
          <th>Status</th>
        <% @user.rockets.each do |rocket|%>
          <tr>
            <td><%= rocket.name%></td>
          </tr>
        <% end %>
      </table>
      <%= link_to 'Add Rocket ', new_rocket_path(@rocket), class:'btn btn-primary mt-auto'%>
    </div>
  </div>
</div>


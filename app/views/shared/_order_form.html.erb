
  <%= simple_form_for [rocket, order] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :start_date, as: :date, html5: true, input_html: {min: Date.today} %>
      <%= f.input :end_date, as: :date, html5: true, input_html: {min: Date.today} %>

    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-outline-light ml-1 dp-border-radius" %>
    </div>
  <% end %>



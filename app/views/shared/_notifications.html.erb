<div class="notification dp-04 dp-border-radius mt-3">
  <% if review.order.user.avatar.attached? %>
    <%= cl_image_tag current_user.avatar.key, class:"avatar-large" %>
  <% else %>
    <img src='https://kitt.lewagon.com/placeholder/users/random' class="avatar-large" />
  <% end %>
  <div class="notification-content">
    <p><small><%= review.order.user.first_name %> <%= review.order.user.last_name %></small></p>
    <% review.rating.to_i.times do  %>
      <i class="fas fa-star"></i>
    <% end %>
    <p><%= review.content %></p>
  </div>
</div>

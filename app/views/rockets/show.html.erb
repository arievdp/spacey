<div class="container mt-3">
  <% if @rocket.rocket_images.first.nil? %>
    <div class="img-container-rocket" style="background-image: url('https://afar-production.imgix.net/uploads/images/afar_post_headers/images/JSlyHAhjDp/original_SpaceHERO_0000_Journey_20To_20Space_203D_20film_20-_20Space_20Launch_20System_20Launch.jpg?auto=compress,format&fit=crop&crop=top&lossless=true&w=1600&h=700'); background-position: center;">
    </div>
    <% else %>
    <div class="img-container-rocket" style="background-image: url('<%= rails_blob_url(@rocket.rocket_images.first) %>'); background-position: center; ">

    </div>
  <% end %>
  <div class="row">
    <div class="col-7">
      <p id="notice"><%= notice %></p>
      <div class="rocket-title">
        <h2>
          <strong>Rocket:</strong>
          <%= @rocket.name %>
        </h2>
      </div>
    </p>

  <p>
    <strong>Details:</strong>
    <br>
    Payload: <%= @rocket.payload %>
    <br>
    Price: $<%= @rocket.price %> /day
    <br>
    Description: <%= @rocket.description %>
    <br>
    Location: <%= @rocket.location %>
  </p>
    <% if current_user == @rocket.user %>
      <%= link_to 'Edit', edit_rocket_path(@rocket) %> |
      <%= link_to 'Back', rockets_path%> |
      <%= link_to "Delete #{@rocket.name}",
          rocket_path(@rocket),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
    <% end %>

    </div>
    <div class="col-5">
      <div class="show-card">
        <h2>Book now!</h2>
        <%= render 'shared/order_form', rocket: @rocket, order: @order %>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-7 border-top">
      <div class="mt-3">
        <h2>Reviews</h2>
        <% @rocket.orders.each do |order|%>
          <% order.reviews.each do |review| %>
            <%= render 'shared/notifications', review: review %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-5">
        <div id="map" class="mt-3"  style="width: 100%; height: 300px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>

  </div>
</div>



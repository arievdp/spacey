<div class="container mt-3">
  <div class="text-center img-container-rocket">
    <h2>TO:DO PLACE IMAGES HERE</h2>
  </div>
  <div class="row">
    <div class="col-7"
      <p id="notice"><%= notice %></p>
      <div class="rocket-title">
        <h2>
          <strong>Rocket:</strong>
          <%= @rocket.name %>
        </h2>
      </div>
    </p>

    <p>
      <strong>Details:</strong>
      <br>
      Payload: <%= @rocket.payload %>
      <br>
      Price: $<%= @rocket.price %>
      <br>
      Description: <%= @rocket.description %>
      <br>
      Location: <%= @rocket.location %>
    </p>

        <%= link_to 'Edit', edit_rocket_path(@rocket) %> |
        <%= link_to 'Back', rockets_path%> |
        <%= link_to "Delete #{@rocket.name}",
            rocket_path(@rocket),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

    </div>
    <div class="col-5">
      <div class="show-card">
        <h2>Book now!</h2>
        <%= render 'order_form', rocket: @rocket, order: @order %>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-7 border-top">
      <div class="mt-3">
        <h2>Reviews</h2>
        <table class="table table-striped mt-3">
        <tr>
          <th>Review</th>
          <th>Rating</th>
        </tr>
        <% @rocket.orders.each do |order|%>
          <% order.reviews.each do |review| %>
          <tr>
            <td><%= review.content %></td>
            <td><%= review.rating %></td>
          </tr>
        <% end %>
        <% end %>
      </table>
      </div>
    </div>
  </div>
</div>



<div class="container">
  <p id="notice"><%= notice %></p>
    <strong>Rocket:</strong>
    <%= @rocket.name %>
  </p>

  <p>
    <strong>Details:</strong>
    <%= cl_image_tag @rocket.photo.key, height: 300, width: 400, crop: :fill %>
    <br>
    Payload: <%= @rocket.payload %>
    <br>
    Price: $<%= @rocket.price %>
    <br>
    Description: <%= @rocket.description %>
    <br>
    Location: <%= @rocket.location %>
  </p>


  <%= link_to 'Edit', edit_rocket_path(@rocket) %> |
  <%= link_to 'Back', rockets_path%>
</div>


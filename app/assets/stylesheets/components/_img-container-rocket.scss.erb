.img-container-rocket {
  height: 350px;
  background-color: light-gray;
  margin-top: 24px;
  border-radius: $dp-border-radius;
  padding: 8px 24px 24px;
}

.rocket-location {
  border-radius: $dp-border-radius;
}

.img-container-rocket-index {
  height: 150px;
  background-color: light-gray;
  margin-top: 24px;
  border-radius: $dp-border-radius;
  background-image: linear-gradient(0deg, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.9)), url(https://images.immediate.co.uk/production/volatile/sites/4/2019/09/GettyImages-471296532-c-db7bc08.jpg?quality=45&resize=960,413);
  background-size:     cover;                      /* <------ */
  background-repeat:   no-repeat;
  background-position: center center;              /* optional, center the image */
  h1 {
    color: white;
  }
}

.img-container-rocket-about {
  color: $dp-black;
  height: 150px;
  margin-top: 24px;
  border-radius: $dp-border-radius;
  background-image: linear-gradient(0deg, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.9)), url(https://scx2.b-cdn.net/gfx/news/hires/2018/space.jpg);
  background-size:     cover;                      /* <------ */
  background-repeat:   no-repeat;
  background-position: center center;              /* optional, center the image */
  h1 {
    color: $dp-black;
    margin: 0;
  }
}

.about-info {
  h2 {
    margin-bottom: 20px;
  }
  h3 {
    margin-bottom: 20px;
  }
}
